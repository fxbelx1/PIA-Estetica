<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")


    <style>
        div.inicio {
            margin-top: 0px;
            height: 1000px;
            width: 500px;
            background-color: #191919;
            align-items: center;
            float: left;
        }

        div.centrar {
            width: 250px;
            margin: 0 auto;
            text-align: center;
        }

        img {
            height: 500px;
            width: 500px;
            margin: auto;
            display: block;
        }

        a.a_inicio {
            display: block;
            width: 250px;
            background-color: white;
            color: #191919;
            border: 2px solid;
            padding: 5px 30px;
            text-decoration: none;
            font-size: 15px;
            border-radius: 10px;
            transition: color 0.2s, background 0.2s;
            margin-top: 15px;
            margin-right: 30px;
            letter-spacing: 2px;
        }
    </style>

</head>
<body>
    <div class="inicio">
        <br /><br /><br /><br />
        <img src="~/Imagenes/logo_blanco.png" style="align-self: center" />
        <div class="centrar">
            <a>@Html.ActionLink("Citas", "Index", "Citas", null, new { @class = "a_inicio" })</a>
            <a>@Html.ActionLink("Servicios", "Index", "Servicios", null, new { @class = "a_inicio" })</a>
            <a>@Html.ActionLink("Empleados", "Index", "Empleados", null, new { @class = "a_inicio" })</a>
            <a>@Html.ActionLink("Cerrar sesión", "", "", null, new { @class = "a_inicio" })</a>
        </div>
    </div>

    <div class="xd", style=" float:left; height:927px; width:1250px; margin-left:100px;">
        <div style="margin-left:auto; margin-right:auto; width: 1000px; height:800px;">
            @RenderBody()
            @RenderSection("Scripts", required: false)
        </div>
    </div>
</body>
</html>
